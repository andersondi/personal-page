{% extends "layout.njk" %}

{% block content %}
  <!-- Introduction -->
  <section class="intro">
    <h1 class="section__title section__title--intro">
      Este é o serviço
      <strong>{{job.title}}</strong>
    </h1>
    <p class="section__subtitle--intro">
      {{job.subTitle}}
    </p>
    <img src="{{job.images.banner}}" alt="Imagem do projeto {{job.name}}" class="intro__img">
  </section>

  <div class="portfolio-item-individual">
    {% if job.primaryDescription %}
      <h1 class="section__title">Descrição</h1>
      <p>
        {{job.primaryDescription}}
      </p>
      <img src="{{job.images.primaryResult}}" alt="Imagem ilustrando o funcionamento de {{job.name}}" class="result__img">
    {% endif %}
    {% if job.secondaryDescription %}
      <img src="{{job.images.secondaryResult}}" alt="Imagem ilustrando o funcionamento de {{job.name}}" class="intro__img">
      <p>
        {{job.secondaryDescription}}
      </p>
    {% endif %}
    {% if job.technologies %}
      <h1 class="section__title">Tecnologias utilizadas</h1>
      <ul>
      {% for technology in job.technologies %}
        <li>{{technology.name}}</li>
      {% endfor %}
      </ul>
    {% endif %}
  </div>
{% endblock content %}
<!-- Footer -->
{% block scripts %}
  <script src="./scripts/index.js"></script>
{% endblock scripts %}
